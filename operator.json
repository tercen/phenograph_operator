{
  "name": "PhenoGraph",
  "description": "Clusters flow cytometry data using a graph-based method.",
  "tags": [
    "clustering",
    "flow cytometry"
  ],
  "authors": [
    "tercen"
  ],
  "urls": [
    "https://github.com/tercen/phenograph_operator"
  ],
  "properties": [
    {
      "kind": "DoubleProperty",
      "name": "k",
      "defaultValue": 30,
      "description": "integer, number of nearest neighbours"
    },
    {
      "kind": "DoubleProperty",
      "name": "seed",
      "defaultValue": -1,
      "description": "Seed for random number generation. If less than 0, uses a random seed."
    },
    {
      "kind": "EnumeratedProperty",
      "name": "implementation",
      "defaultValue": "FastPG",
      "values": [
        "FastPG",
        "Rphenograph"
      ],
      "description": "R implementation to be used."
    }
  ],
  "operatorSpec": {
    "kind": "OperatorSpec",
    "ontologyUri": "https://tercen.com/_ontology/tercen",
    "ontologyVersion": "0.0.1",
    "inputSpecs": [
      {
        "kind": "CrosstabSpec",
        "metaFactors": [
          {
            "kind": "MetaFactor",
            "name": "Variable",
            "type": "",
            "description": "Variable identifiers (channels, markers)",
            "ontologyMapping": "variable",
            "crosstabMapping": "row",
            "cardinality": "1..n",
            "factors": []
          },
          {
            "kind": "MetaFactor",
            "name": "Observation",
            "type": "",
            "description": "Observation identifiers (cells)",
            "ontologyMapping": "observation",
            "crosstabMapping": "column",
            "cardinality": "1..n",
            "factors": []
          }
        ],
        "axis": [
          {
            "kind": "AxisSpec",
            "metaFactors": [
              {
                "kind": "MetaFactor",
                "name": "Measurement",
                "type": "numeric",
                "description": "Measurement value of the signal",
                "ontologyMapping": "measurement",
                "crosstabMapping": "y",
                "cardinality": "1",
                "factors": []
              }
            ]
          }
        ]
      }
    ],
    "outputSpecsV2": [
      {
        "kind": "OperatorJoinSpec",
        "joinOperators": [
          {
            "kind": "JoinOperator",
            "joinType": "left",
            "leftPair": {
              "kind": "ColumnPair",
              "lColumns": [
                "Observation"
              ],
              "rColumns": [
                "Observation"
              ]
            },
            "rightRelation": {
              "kind": "TableRelation",
              "attributes": [
                {
                  "kind": "Attribute",
                  "name": "cluster_id",
                  "type": "string"
                }
              ]
            }
          }
        ]
      }
    ]
  }
}